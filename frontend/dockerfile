# Stage 1: Build the Angular app
FROM node:20-alpine AS build

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the app for static serving (no SSR)
RUN npm run build -- --configuration=production --output-path=dist/angular-capstone

# Stage 2: Serve the app with Nginx
FROM nginx:alpine

# Copy built app to nginx (the Angular files are in the browser subfolder!)
COPY --from=build /app/dist/angular-capstone/browser /usr/share/nginx/html

# Copy custom nginx configuration for Angular routing
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]